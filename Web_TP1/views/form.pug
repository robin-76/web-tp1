extends layout

block heroFoot
    // Hero footer: will stick at the bottom
    section.hero
        .is-primary
            .is-small
                .has-background-info
                    .hero-foot
                        nav.breadcrumb.is-centered(aria-label='breadcrumbs')
                            .has-bullet-separator
                                ul
                                    li
                                        a(href='/').has-text-white
                                            span.icon.is-small
                                                i.fas.fa-home(aria-hidden='true')
                                            span Home
                                    li
                                        a(href='announces').has-text-white
                                            span.icon.is-small
                                                i.fas.fa-list-ul(aria-hidden='true')
                                            span Announces
                                    li.is-active.has-text-black
                                        a
                                            span.icon.is-small
                                                i.far.fa-file-alt(aria-hidden='true')
                                            span Add an announce
                                    li
                                        a(href='about').has-text-white
                                            span.icon.is-small
                                                i.far.fa-question-circle(aria-hidden='true')
                                            span About
block middle
    section.section
        -data = data || {}

          if errors
            ul
              for error in errors
                li= error.msg

          form(action="form" method="POST")
            label(for="title") Titre :
            input(
              type="text"
              required="required"
              id="title"
              name="title"
              value=data.title
            )

            label(for="type") Object's type :
            select(name='type' required='required' id='type' value=data.type)
                option(value='') Choose an option
                option(value='Sell') Sell
                option(value='Location') Location

            label(for="publicationStatus") Publication's status :
            select(name='publicationStatus' required='required' id='publicationStatus' value=data.publicationStatus)
                option(value='') Choose an option
                option(value='Published') Published
                option(value='Not published') Not published

            label(for="goodStatus") Object's status:
            select(name='goodStatus' required='required' id='goodStatus' value=data.goodStatus)
                option(value='') Choose an option
                option(value='Available') Available
                option(value='Rented') Rented
                option(value='Sold') Sold

            label(for="description") Description :
            textarea(name='description' required='required' id ="description" placeholder='Describe your announce in a few lines ...' value=data.description)

            label(for="price") Price :
            input(
              type="number"
              required="required"
              id="price"
              name="price"
              min="0"
              value=data.price
            )

            label(for="firstDate") Available date :
            input(
              type="date"
              required="required"
              id="firstDate"
              name="firstDate"
              min='2021-01-01'
              value=data.firstDate
            )

            label(for="secondDate") to :
            input(
              type="date"
              required="required"
              id="secondDate"
              name="secondDate"
              min='2021-01-01'
              value=data.secondDate
            )

            label(for="pictures") Pictures :
            input(
              type="file"
              id="pictures"
              name="pictures"
              multiple data-max-file-size="3MB"
              accept='image/png, image/jpeg'
              value=data.pictures
            )

            input(type="submit" value="Submit")