extends layout

block content
    section.hero
        .is-primary
            .is-small
                .has-background-info
                    // Hero head: will stick at the top
                    .hero-head

                    // Hero content: will be in the middle
                    .hero-body
                        .container
                            .has-text-centered
                                p.title.has-text-white
                                    | Le Bon Logement

                    // Hero footer: will stick at the bottom
                    .hero-foot
                        nav.breadcrumb.is-centered(aria-label='breadcrumbs')
                            .has-bullet-separator
                                ul
                                    li
                                        a(href='/').has-text-white
                                            span.icon.is-small
                                                i.fas.fa-home(aria-hidden='true')
                                            span Annonces
                                    li.is-active.has-text-black
                                        a
                                            span.icon.is-small
                                                i.far.fa-file-alt(aria-hidden='true')
                                            span Ajouter une annonce
                                    li
                                        a(href='about').has-text-white
                                            span.icon.is-small
                                                i.far.fa-question-circle(aria-hidden='true')
                                            span A propos

    section.section
        form(method="POST" action='/announce')
            .columns.is-centered.z
                .column.is-half
                    .notification.is-primary.has-background-link-light
                        .field.has-addons.has-addons-centered
                        label.label Titre :
                        .control
                        input.input(type='text' name='title' placeholder='Titre de l\'annonce ...')

                        .field
                        label.label Type de bien :
                        .control
                        .select
                            select(name='type')
                                option Choisir une option
                                option Vente
                                option Location

                        .field
                        label.label Status de publication :
                        .control
                        .select
                            select(name='publicationStatus')
                                option Choisir une option
                                option Publiée
                                option Non publiée

                        .field
                        label.label Status de bien :
                        .control
                        .select
                            select(name='goodStatus')
                                option Choisir une option
                                option Disponible
                                option Loué
                                option Vendu

                        .field
                        label.label Description :
                        .control
                        textarea.textarea(name='description' placeholder='Décrivez votre annonce en quelques lignes ...')

                        .field
                        label.label Prix :
                        .control
                        input.input(name='price' type='number', min='0')

                        .field
                        label.label Date de disponibilité :
                        input.input(type='date', name='firstDate', value='2021-01-01', min='2021-01-01')
                        label.label au :
                        input.input(type='date', name='secondDate', value='2021-01-01', min='2021-01-01')

                        .field
                            label.label Photos :
                            input.input(type="file" name="photos" required multiple data-max-file-size="3MB" accept='image/png, image/jpeg')

                        .field
                        .control
                        button.button.is-link(type='submit') Envoyer

    footer.footer.wrapper.has-background-light
        .content.has-text-centered.has-text-black.wrapper
            p
                strong Bulma
                |  par Maxence Bourgeaux and Robin Guyomar
