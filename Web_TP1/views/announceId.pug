extends layout

block heroFoot
    // Hero footer: will stick at the bottom
    section.hero
        .is-primary
            .is-small
                .has-background-info
                    .hero-foot
                        nav.breadcrumb.is-centered(aria-label='breadcrumbs')
                            .has-bullet-separator
                                ul
                                    li
                                        a(href='/').has-text-white
                                            span.icon.is-small
                                                i.fas.fa-home(aria-hidden='true')
                                            span Home
                                    li
                                        a(href='../announces').has-text-white
                                            span.icon.is-small
                                                i.fas.fa-list-ul(aria-hidden='true')
                                            span Announces
                                    li.is-active.has-text-black
                                        a.has-text-black
                                            span.icon.is-small
                                                i.fas.fa-list-ul(aria-hidden='true')
                                            span #{announceId.title}
                                    li
                                        a(href='../form').has-text-white
                                            span.icon.is-small
                                                i.far.fa-file-alt(aria-hidden='true')
                                            span Add an announce
                                    li
                                        a(href='../about').has-text-white
                                            span.icon.is-small
                                                i.far.fa-question-circle(aria-hidden='true')
                                            span About

block middle
    section.section
        .columns.is-centered
            .column.is-half
                .notification.is-primary.has-background-link-light
                    table.has-text-black
                        tr
                            th Title
                            th Type of good
                            th Publication's status
                            th Good's status
                            th Description
                            th Price
                            th Available date
                            th to
                            th Pictures

                            tr
                                td #{announceId.title}
                                td #{announceId.type}
                                td #{announceId.publicationStatus}
                                td #{announceId.goodStatus}
                                td #{announceId.description}
                                td #{announceId.price}
                                td #{announceId.firstDate}
                                td #{announceId.secondDate}
                                td #{announceId.pictures}
