extends layout

block heroFoot
    // Hero footer: will stick at the bottom
    section.hero
        .is-primary
            .is-small
                .has-background-info
                    .hero-foot
                        nav.breadcrumb.is-centered(aria-label='breadcrumbs')
                            .has-bullet-separator
                                ul
                                    li
                                        a(href='/').has-text-white
                                            span.icon.is-small
                                                i.fas.fa-home(aria-hidden='true')
                                            span Home
                                    li
                                        a(href='announces').has-text-white
                                            span.icon.is-small
                                                i.fas.fa-list-ul(aria-hidden='true')
                                            span Announces
                                    li
                                        a(href='form').has-text-white
                                            span.icon.is-small
                                                i.far.fa-file-alt(aria-hidden='true')
                                            span Add an announce
                                    li.is-active.has-text-black
                                        a
                                            span.icon.is-small
                                                i.far.fa-question-circle(aria-hidden='true')
                                            span About
                                    li
                                        a(href='login').has-text-white
                                            span.icon.is-small
                                                i.far.fa-question-circle(aria-hidden='true')
                                            span Login    
                                    li
                                        a(href='signup').has-text-white
                                            span.icon.is-small
                                                i.far.fa-question-circle(aria-hidden='true')
                                            span Sign up          

block middle
    section.section.has-background-white
        h1.title
            .has-text-black
                .has-text-centered About us
        br
        p.has-text-black.has-text-centered
            | We are Robin GUYOMAR and Maxence BOURGEAUX, students in Master 2 IWOCS at University of Le Havre.
        br
        p.has-text-black.has-text-centered
            | This website of real estate ads is a project realized for the WEB subject taught by :
        a(href="https://pigne.org").has-text-info
            .has-text-centered Yoann Pign√©