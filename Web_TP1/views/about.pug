extends layout

block heroFoot
    // Hero footer: will stick at the bottom
    section.hero
        .is-primary
            .is-small
                .has-background-info
                    .hero-foot
                        nav.breadcrumb.is-centered(aria-label='breadcrumbs')
                            .has-bullet-separator
                                ul
                                    li
                                        a(href='/').has-text-white
                                            span.icon.is-small
                                                i.fas.fa-home(aria-hidden='true')
                                            span Accueil
                                    li
                                        a(href='announce').has-text-white
                                            span.icon.is-small
                                                i.far.fa-question-circle(aria-hidden='true')
                                            span Annonces
                                    li
                                        a(href='form').has-text-white
                                            span.icon.is-small
                                                i.far.fa-file-alt(aria-hidden='true')
                                            span Ajouter une annonce
                                    li.is-active.has-text-black
                                        a
                                            span.icon.is-small
                                                i.far.fa-question-circle(aria-hidden='true')
                                            span A propos

block middle
    section.section.has-background-white
        h1.title.has-text-black A propos de nous
        br
        p.has-text-black
            | Nous sommes Robin GUYOMAR et Maxence BOURGEAUX, étudiants en Master 2 IWOCS à l'université du Havre.
        br
        p.has-text-black
            | Ce site web d'annonces de biens immobiliers est un projet réalisé pour la matière WEB enseignée par :
        a(href="https://pigne.org").has-text-info  Yoann Pigné