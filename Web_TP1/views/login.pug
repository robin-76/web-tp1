extends layout

block heroFoot
    // Hero footer: will stick at the bottom
    section.hero
        .is-primary
            .is-small
                .has-background-info
                    .hero-foot
                        nav.breadcrumb.is-centered(aria-label='breadcrumbs')
                            .has-bullet-separator
                                ul
                                    li
                                        a(href='/').has-text-white
                                            span.icon.is-small
                                                i.fas.fa-home(aria-hidden='true')
                                            span Home
                                    li
                                        a(href='announces').has-text-white
                                            span.icon.is-small
                                                i.fas.fa-list-ul(aria-hidden='true')
                                            span Announces
                                    li
                                        a
                                            span.icon.is-small
                                                i.far.fa-file-alt(aria-hidden='true')
                                            span Add an announce
                                    li
                                        a(href='about').has-text-white
                                            span.icon.is-small
                                                i.far.fa-question-circle(aria-hidden='true')
                                            span About
                                    li.is-active.has-text-black
                                        a(href='login').has-text-white
                                            span.icon.is-small
                                                i.far.fa-question-circle(aria-hidden='true')
                                            span Login    
                                    li
                                        a(href='signup').has-text-white
                                            span.icon.is-small
                                                i.far.fa-question-circle(aria-hidden='true')
                                            span Sign up          
block middle
    section.section
        -data = data || {}

            if errors
                ul
                    for error in errors
                        li= error.msg

        form(action="login" method="POST")
            .columns.is-centered
                .column.is-half
                    .notification.is-primary.has-background-link-light
                        .field
                        label.label(for="name") Name :
                        .control
                        input.input(type="text" required="required" id="name" name="name" value=data.name)

                        .field
                        label.label(for="password") Password :
                        .control
                        input.input(type="password" required="required" id="password" name="password" value=data.password)

                        .field
                        .control
                        button.button.is-link(type='submit' value='submit' style='display: block; margin: 0 auto;') Submit