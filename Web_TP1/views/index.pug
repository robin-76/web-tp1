extends layout

block content
    section.hero
        .is-primary
            .is-small
                .has-background-info
                    // Hero head: will stick at the top
                    .hero-head

                    // Hero content: will be in the middle
                    .hero-body
                        .container
                            .has-text-centered
                                p.title.has-text-white
                                    | Le Bon Logement

                    // Hero footer: will stick at the bottom
                    .hero-foot
                        nav.breadcrumb.is-centered(aria-label='breadcrumbs')
                            .has-bullet-separator
                                ul
                                    li.is-active.has-text-black
                                        a
                                            span.icon.is-small
                                                i.fas.fa-home(aria-hidden='true')
                                            span Annonces
                                    li
                                        a(href='form').has-text-white
                                            span.icon.is-small
                                                i.far.fa-file-alt(aria-hidden='true')
                                            span Ajouter une annonce
                                    li
                                        a(href='about').has-text-white
                                            span.icon.is-small
                                                i.far.fa-question-circle(aria-hidden='true')
                                            span A propos

    footer.footer.wrapper.has-background-light
        .content.has-text-centered.has-text-black.wrapper
            p
                strong Bulma
                |  par Maxence Bourgeaux and Robin Guyomar
